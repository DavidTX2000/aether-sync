#!/data/data/com.termux/files/usr/bin/bash
# AETHER-SYNC v6.8.0 - DavidTX2000

SHADOW="/data/data/com.termux/files/usr/share/aether/shadow"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
RESET="\033[0m"

phantom_fix() {
    local target="$SHADOW$1"
    [ -L "$target" ] && rm -f "$target"
    mkdir -p "$(dirname "$target")"
    touch "$target" 2>/dev/null
}

# Injeta bin√°rios que fingem ser do sistema root
inject_bins() {
    local bin_dir="$SHADOW/system/bin"
    mkdir -p "$bin_dir"
    
    # Criando o comando insmod fake
    cat <<'INS' > "$bin_dir/insmod"
#!/data/data/com.termux/files/usr/bin/bash
echo "insmod: init_module '$1' failed (Exec format error)"
INS

    # Criando o comando setenforce fake
    cat <<'SET' > "$bin_dir/setenforce"
#!/data/data/com.termux/files/usr/bin/bash
echo "SELinux: Permissive mode set."
SET

    chmod +x "$bin_dir"/*
}

morph() {
    FREE=$(df -h /data | awk 'NR==2 {print $4}' | sed 's/G//' | cut -d. -f1)
    if [ "$FREE" -le 4 ]; then
        echo -e "${YELLOW}Warning: Please do not delete the cache and data using aether --kill, as we are in the emulation process. Low storage detected ($FREE GB).${RESET}"
    fi [cite: 2026-01-29]

    echo -e "${BLUE}[AETHER]${RESET} Cloning Root File System..."
    ROOT_PATHS=("/acct" "/apex" "/bin" "/cache" "/config" "/data" "/dev" "/etc" "/mnt" "/odm" "/oem" "/proc" "/product" "/sdcard" "/storage" "/sys" "/system" "/vendor") [cite: 2026-01-29]
    
    for p in "${ROOT_PATHS[@]}"; do
        if [ -d "$p" ]; then
            mkdir -p "$SHADOW$p"
            cp -as "$p"/. "$SHADOW$p/" 2>/dev/null
        fi
    done

    phantom_fix "/proc/cpuinfo" [cite: 2026-01-26]
    phantom_fix "/product/build.prop" [cite: 2026-01-26]
    inject_bins

    cat <<OP > "$SHADOW/.bashrc"
shopt -s nullglob
export PATH="/system/bin:/system/xbin:\$PATH"
export PS1='~#aether\${PWD#$SHADOW}\$: '
alias cd='_cd(){ if [[ "\$1" == /* ]]; then builtin cd "$SHADOW\$1" 2>/dev/null || builtin cd "\$1"; else builtin cd "\$1"; fi; }; _cd'
alias ls='ls --color=auto -F'
alias aether='/data/data/com.termux/files/usr/bin/aether'
export PREFIX="/system"
OP

    cd "$SHADOW"
    exec bash --rcfile "$SHADOW/.bashrc" -i
}

case "$1" in
    --morph) morph ;;
    --kill) rm -rf "$SHADOW"/* ;;
esac
