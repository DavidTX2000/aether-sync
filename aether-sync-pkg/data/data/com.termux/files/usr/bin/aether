#!/data/data/com.termux/files/usr/bin/bash
# AETHER-SYNC v6.7.0 - DavidTX2000

SHADOW="/data/data/com.termux/files/usr/share/aether/shadow"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
GREEN="\033[1;32m"
RESET="\033[0m"

get_free_space() {
    df -h /data | awk 'NR==2 {print $4}' | sed 's/G//' | cut -d. -f1
}

# Fix for Permission Denied on system files
phantom_fix() {
    local target="$SHADOW$1"
    [ -L "$target" ] && rm -f "$target"
    mkdir -p "$(dirname "$target")"
    touch "$target" 2>/dev/null
}

morph() {
    FREE=$(get_free_space)
    if [ "$FREE" -le 4 ]; then
        echo -e "${YELLOW}Warning: Please do not delete the cache and data using aether --kill, as we are in the emulation process. Low storage detected ($FREE GB).${RESET}"
    fi

    echo -e "${BLUE}[AETHER]${RESET} Cloning Root File System..."
    # Folders based on your ZArchiver screenshots [cite: 2026-01-29]
    ROOT_PATHS=("/acct" "/apex" "/bin" "/cache" "/config" "/data" "/dev" "/etc" "/mnt" "/odm" "/oem" "/proc" "/product" "/sdcard" "/storage" "/sys" "/system" "/vendor")
    
    for p in "${ROOT_PATHS[@]}"; do
        if [ -d "$p" ]; then
            mkdir -p "$SHADOW$p"
            cp -as "$p"/. "$SHADOW$p/" 2>/dev/null
        fi
    done

    # Applying Write-Bypass fixes [cite: 2026-01-26]
    phantom_fix "/proc/cpuinfo"
    phantom_fix "/product/build.prop"
    mkdir -p "$SHADOW/data/data/com.whatsapp/databases"

    # Terminal Setup: Direct to Home (~#aether$:)
    cat <<OP > "$SHADOW/.bashrc"
shopt -s nullglob
export PS1='~#aether\${PWD#$SHADOW}\$: '
alias cd='_cd(){ if [[ "\$1" == /* ]]; then builtin cd "$SHADOW\$1" 2>/dev/null || builtin cd "\$1"; else builtin cd "\$1"; fi; }; _cd'
alias ls='ls --color=auto -F'
alias aether='/data/data/com.termux/files/usr/bin/aether'
unset TERMUX_VERSION
export PREFIX="/system"
OP

    echo -e "${BLUE}[AETHER]${RESET} Mirroring Complete."
    cd "$SHADOW"
    exec bash --rcfile "$SHADOW/.bashrc" -i
}

case "$1" in
    --morph) morph ;;
    --kill) rm -rf "$SHADOW"/* && echo "Shadow Purged." ;;
    *) echo "Usage: aether [--morph|--kill]" ;;
esac
